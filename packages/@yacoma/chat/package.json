{
  "name": "@lucidogen/chat",
  "version": "0.0.0",
  "description": "Messaging components and actions.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lucidogen/lucidogen.git"
  },
  "author": "Gaspard Bucher <gaspard@lucidogen.io>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "tsc -p setup/tsconfig.${NODE_ENV:=development}.json",
    "build:watch": "tsc -w -p setup/tsconfig.${NODE_ENV:=development}.json",
    "postbuild": "cp package.json ../../node_modules/@lucidogen/chat",
    "prepare": "rimraf dist && cp -r ../../node_modules/@lucidogen/chat/dist dist",
    "clean": "rimraf .cache dist coverage ../../node_modules/@lucidogen/chat",
    "stories": "parcel serve --port 8888 src/stories/index.html",
    "test": "jest -c setup/jest.js",
    "test:watch": "jest -c setup/jest.js --watch --coverage false"
  },
  "dependencies": {
    "@lucidogen/build": "next",
    "@lucidogen/data": "next",
    "@lucidogen/date": "next",
    "@lucidogen/document": "next",
    "@lucidogen/dragdrop": "next",
    "@lucidogen/hooks": "next",
    "@lucidogen/locale": "next",
    "@lucidogen/menu": "next",
    "@lucidogen/security": "next",
    "@lucidogen/styled": "next",
    "@lucidogen/theme": "next",
    "classnames": "^2.2.6",
    "overmind": "^5.1.2",
    "moment": "^2.22.2",
    "react": "16.4.2",
    "react-dom": "16.4.2",
    "styled-components": "4.1.3",
    "jwt-decode": "^2.2.0",
    "graphql-request": "^1.8.2",
    "subscriptions-transport-ws": "^0.9.14"
  },
  "devDependencies": {
    "@types/jwt-decode": "^2.2.1",
    "@lucidogen/story": "next",
    "@fortawesome/free-solid-svg-icons": "^5.2.0",
    "@fortawesome/react-fontawesome": "^0.1.2",
    "@fortawesome/fontawesome-svg-core": "^1.2.2",
    "overmind-devtools": "next",
    "jest": "^23.5.0",
    "simple-mock": "^0.8.0",
    "ts-jest": "^23.1.3",
    "typescript": "^3.3.1"
  },
  "importSort": {
    ".js, .jsx, .es6, .es": {
      "parser": "babylon",
      "style": "import-sort-style-module",
      "options": {}
    },
    ".ts, .tsx": {
      "parser": "typescript",
      "style": "import-sort-style-module",
      "options": {}
    }
  }
}
