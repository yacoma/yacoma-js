{
  "name": "@lucidogen/editor",
  "version": "0.0.0",
  "description": "WYSIWYG editor",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lucidogen/lucidogen.git"
  },
  "author": "Gaspard Bucher <gaspard@lucidogen.io>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "tsc -p setup/tsconfig.${NODE_ENV:=development}.json",
    "postbuild": "cp package.json ../../node_modules/@lucidogen/editor",
    "prepare": "rimraf dist && cp -r ../../node_modules/@lucidogen/editor/dist dist",
    "clean": "rimraf .cache dist coverage ../../node_modules/@lucidogen/editor",
    "stories": "parcel serve --no-autoinstall src/stories/index.html",
    "test": "jest -c setup/jest.js",
    "test:watch": "jest -c setup/jest.js --watch --coverage false"
  },
  "dependencies": {
    "@lucidogen/build": "next",
    "@lucidogen/locale": "next",
    "@lucidogen/styled": "next",
    "@lucidogen/theme": "next",
    "classnames": "^2.2.6",
    "overmind-react": "next",
    "overmind": "next",
    "react-dom": "^16.8.1",
    "react": "^16.8.1",
    "styled-components": "4.1.3"
  },
  "devDependencies": {
    "@lucidogen/story": "next",
    "@types/classnames": "^2.2.6",
    "@types/styled-components": "^4.0.1",
    "jest": "^23.5.0",
    "ts-jest": "^23.1.3",
    "typescript": "^3.3.1"
  },
  "importSort": {
    ".js, .jsx, .es6, .es": {
      "parser": "babylon",
      "style": "import-sort-style-module",
      "options": {}
    },
    ".ts, .tsx": {
      "parser": "typescript",
      "style": "import-sort-style-module",
      "options": {}
    }
  }
}
